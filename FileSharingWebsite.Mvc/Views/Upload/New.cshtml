@model Upload

<div class="row justify-content-center">
    <div class="text-center col-12 col-md-6">
        <form asp-action="New" method="post" enctype="multipart/form-data">
            <h5 class="display-5 my-5">New Upload</h5>
            <div class="text-danger" asp-validation-summary="All"></div>

            <div class="form-group my-2">

                <div class="form-group my-3">
                    <input type="file" class="form-control" name="file">
                </div>


                <div class="form-group my-3 d-flex">
                    <label>File name</label>
                    <input type="text" class="form-control ms-2" asp-for="FileName">
                </div>

                <div class="form-group my-3 d-flex">
                    <label class="mt-3">Description</label>
                    <input type="text" class="form-control ms-2" asp-for="Description" style="height:100px;">
                </div>

                <div class="form-group my-5">
                    <button type="submit" class="btn btn-success fs-5 rounded-pill p-2 px-5"><i class="fa-solid fa-upload"></i> Upload</button>
                </div>

            </div>
        </form>

    </div>
</div>